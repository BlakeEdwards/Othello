<UserControl x:Class="Othello.View.UserControls.BaseTile"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Othello.View.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="100" BorderBrush="#FFF1C9C9">
    <Border MouseDown="OnTileClicked" Background="Transparent" BorderThickness="1" BorderBrush="#FFCC7878">
        <Viewbox>
            <Ellipse x:Name="Piece" Height="100" Width="100"/>
        </Viewbox>
    </Border>
</UserControl>
